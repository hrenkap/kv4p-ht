<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.vagell.kv4pht.ui.MainViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context="com.vagell.kv4pht.ui.MainActivity"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/rxAudioCircle"
                android:contentDescription="Visualization of current receive audio volume"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/circle_rx"
                android:focusable="false"
                android:importantForAccessibility="no"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/txAudioCircle"
                    android:contentDescription="Visualization of current transmit audio volume"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    android:src="@drawable/circle_tx"
                    android:focusable="false"
                    android:importantForAccessibility="no"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainTopLevelLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/settingsButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_settings"
                    android:layout_gravity="right"
                    android:contentDescription="Settings"
                    android:onClick="settingsClicked" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/frequencyContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-16dp">

                <TextView
                    android:id="@+id/activeMemoryName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost"
                    android:gravity="center"
                    android:text="Welcome to"
                    android:textColor="@color/primary"
                    android:textSize="24dp"
                    android:maxLines="1"/>

                <EditText
                    android:id="@+id/activeFrequency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-8dp"
                    android:fontFamily="@font/jost"
                    android:gravity="center"
                    android:textColor="@color/primary"
                    android:textSize="64dp"
                    android:text="kv4p HT"
                    android:background="@color/clear"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="numberDecimal" />

                <LinearLayout
                    android:id="@+id/sMeter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:paddingTop="4dp"> <!-- Content description set in Java -->

                    <View
                        android:id="@+id/sMeter1"
                        android:layout_width="12dp"
                        android:layout_height="2dp"
                        android:layout_marginRight="6dp"
                        android:background="@color/primary"
                        android:alpha="0.2"
                        android:focusable="false"/>

                    <View
                        android:id="@+id/sMeter2"
                        android:layout_width="12dp"
                        android:layout_height="3dp"
                        android:layout_marginRight="6dp"
                        android:background="@color/primary"
                        android:alpha="0.2"
                        android:focusable="false"/>

                    <View
                        android:id="@+id/sMeter3"
                        android:layout_width="12dp"
                        android:layout_height="4dp"
                        android:layout_marginRight="6dp"
                        android:background="@color/primary"
                        android:alpha="0.2"
                        android:focusable="false"/>

                    <View
                        android:id="@+id/sMeter4"
                        android:layout_width="12dp"
                        android:layout_height="5dp"
                        android:layout_marginRight="6dp"
                        android:background="@color/primary"
                        android:alpha="0.2"
                        android:focusable="false"/>

                    <View
                        android:id="@+id/sMeter5"
                        android:layout_width="12dp"
                        android:layout_height="6dp"
                        android:layout_marginRight="6dp"
                        android:background="@color/primary"
                        android:alpha="0.2"
                        android:focusable="false"/>

                    <View
                        android:id="@+id/sMeter6"
                        android:layout_width="12dp"
                        android:layout_height="7dp"
                        android:layout_marginRight="6dp"
                        android:background="@color/primary"
                        android:alpha="0.2"
                        android:focusable="false"/>

                    <View
                        android:id="@+id/sMeter7"
                        android:layout_width="12dp"
                        android:layout_height="8dp"
                        android:layout_marginRight="6dp"
                        android:background="@color/primary"
                        android:alpha="0.2"
                        android:focusable="false"/>

                    <View
                        android:id="@+id/sMeter8"
                        android:layout_width="12dp"
                        android:layout_height="9dp"
                        android:layout_marginRight="6dp"
                        android:background="@color/primary"
                        android:alpha="0.2"
                        android:focusable="false"/>

                    <View
                        android:id="@+id/sMeter9"
                        android:layout_width="12dp"
                        android:layout_height="10dp"
                        android:background="@color/primary"
                        android:alpha="0.2"
                        android:focusable="false"/>
                </LinearLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/main_fragment_pager"
                android:name="androidx.fragment.app.Fragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/frequencyContainer"
                app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
            />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavigationView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="vertical"
                app:menu="@menu/bottom_nav_menu"
                android:layout_marginTop="48dp"
                app:itemTextColor="@color/bottom_nav_color"
                app:itemIconTint="@color/bottom_nav_color"
                app:itemActiveIndicatorStyle="@style/Theme.BottomNavigationView.ActiveIndicator"
                android:background="@color/medium_gray"/>

            <ImageButton
                android:id="@+id/pttButton"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:background="@drawable/ptt_button"
                android:layout_gravity="center"
                android:layout_marginTop="-148dp"
                android:elevation="8dp"
                app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="Push to talk"
                android:clickable="false" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>